pipeline {
    agent any

    stages {
        stage('build') {
            steps {
                echo 'Building..'
		sh '/usr/share/maven/bin/mvn package'
            }
        }
        stage('test') {
            steps {
                echo 'Building..'
		sh '/usr/share/maven/bin/mvn test'
            }
        }
        stage('deploy') {
            steps {
                echo 'Deploying....'
		ssh agent(['Deploy_user']) {
		sh "scp -o StrictHostKeyChecking=no git branch: 'main', url: 'https://github.com/johy9/Jenkins-ci-cd-project.git' centos@54.91.124.78:/opt/tomcat
            }
        }
    }
